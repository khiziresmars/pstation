# Application
APP_NAME="Phuket Station"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
API_URL=https://your-domain.com/api
APP_TIMEZONE=Asia/Bangkok

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=phuket_yachts
DB_USERNAME=phuket_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBAPP_URL=https://your-domain.com
TELEGRAM_PAYMENT_TOKEN=your_payment_provider_token
TELEGRAM_WEBHOOK_SECRET=your_random_webhook_secret

# Telegram Stars Payment
TELEGRAM_STARS_ENABLED=true
TELEGRAM_STARS_RATE_THB=0.013

# JWT Settings
JWT_SECRET=your_very_long_random_jwt_secret_key_here
JWT_EXPIRY=86400

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Stripe Payments
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Crypto Payments (NowPayments)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret
NOWPAYMENTS_WEBHOOK_URL=https://your-domain.com/api/payments/crypto/webhook

# Thai PromptPay QR Payments
PROMPTPAY_ENABLED=false
PROMPTPAY_ACCOUNT_TYPE=phone
PROMPTPAY_ACCOUNT_ID=0812345678
PROMPTPAY_MERCHANT_NAME=Phuket Station

# YooKassa (Russian Payment System)
YOOKASSA_ENABLED=false
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key
YOOKASSA_TEST_MODE=true
YOOKASSA_RETURN_URL=https://your-domain.com/payment/success
YOOKASSA_WEBHOOK_URL=https://your-domain.com/api/payments/yookassa/webhook

# Cashback & Referral
CASHBACK_PERCENT=5
REFERRAL_BONUS_THB=200
CASHBACK_EXPIRY_DAYS=365

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your_api_key
EXCHANGE_RATE_UPDATE_HOURS=6

# Redis Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://web.telegram.org
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Telegram-Init-Data

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=error
LOG_PATH=storage/logs
LOG_ENABLED=true

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Email (SMTP)
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@phuket-yachts.com
MAIL_FROM_NAME="Phuket Station"
ADMIN_EMAIL=admin@phuket-yachts.com

# Sentry Error Tracking (optional)
SENTRY_DSN=
APP_VERSION=1.0.0

# Admin Notifications
ADMIN_GROUP_CHAT_ID=
