# Application
APP_NAME="Phuket Yacht & Tours"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Bangkok

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=phuket_yachts
DB_USER=phuket_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_PAYMENT_TOKEN=your_payment_provider_token
TELEGRAM_WEBHOOK_SECRET=your_random_webhook_secret

# Telegram Stars Payment
TELEGRAM_STARS_ENABLED=true
TELEGRAM_STARS_RATE_THB=0.013

# JWT Settings
JWT_SECRET=your_very_long_random_jwt_secret_key_here
JWT_EXPIRY=86400

# Cashback & Referral
CASHBACK_PERCENT=5
REFERRAL_BONUS_THB=200
CASHBACK_EXPIRY_DAYS=365

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your_api_key
EXCHANGE_RATE_UPDATE_HOURS=6

# CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://web.telegram.org
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Telegram-Init-Data

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=error
LOG_PATH=storage/logs
